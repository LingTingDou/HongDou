@model IEnumerable<HongDouWeb.Music_List>

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/Music/main.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @{
                    if (Model != null && Model.Count() > 0)
                    {
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>歌曲类型</th>
                                    <th>歌手</th>
                                    <th>歌曲名称</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="bg-warning">
                                        <td>@item.Music_Type.TypeName</td>
                                        <td>@item.Music_Singer.SingerName</td>
                                        <td>@item.MusicName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }
            </div>
            @*<div class="col-md-3 bg-gray"></div>*@
        </div>
    </div>
</body>
</html>
